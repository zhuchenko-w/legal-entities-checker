@using Bookkeeping.Data.Models

@model Agent

<div class="panel agent-item panel-default">
    <div class="panel-body">
        <input class="id hidden" value="@Model.Id">
        <div class="row agent-view">
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-4 ellipsed-column">
                <span class="icon user-icon"></span><span class="code">@Model.Code</span>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 ellipsed-column">
                <span class="icon password-icon"></span><span class="password">@Model.Password</span>
            </div>
            <div class="col-lg-4 col-md-4 hidden-sm hidden-xs last-seen-wrap ellipsed-column">
                <span class="icon time-icon"></span><span class="last-seen @(Model.LastSeen.HasValue ? "" : "empty")">@(Model.LastSeen.HasValue ? Model.LastSeen.Value.ToString("dd.MM.yyyy HH:mm") : "не заходил ни разу")</span>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-4">
                <div class="row agent-actions @(Model.IsLocked.HasValue && Model.IsLocked.Value ? "locked" : "unlocked")">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 agent-action edit-agent">
                        <span class="icon edit-agent-icon"></span>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 agent-action set-agent-lock-state">
                        <span class="icon agent-lock-state-icon"></span>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 agent-action remove-agent">
                        <span class="icon remove-agent-icon"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row agent-edit">
            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <span class="icon user-icon"></span>
                        <div class="agent-text-editor-wrap">
                            <input class="code-edit agent-text-editor" type="text" placeholder="введите логин" value="@Model.Code" />
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <span class="icon password-icon"></span>
                        <div class="agent-text-editor-wrap">
                            <input class="password-edit agent-text-editor" type="text" placeholder="введите пароль" value="@Model.Code" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4"></div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                        <span class="edit-button save-edit disabled">СОХРАНИТЬ</span>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                        <span class="edit-button cancel-edit">ЗАКРЫТЬ</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


